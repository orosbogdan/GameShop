@model IEnumerable<GameShop.Models.Transaction>

@{
    ViewBag.Title = "Library";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Library</h2>


<table class="table">
    <tr>
        <th>
            Game
        </th>
        <th>
            Company
        </th>
        <th>
            Year
        </th>
        <th>
            Bought on 
        </th>
        <th>
            Price
        </th>
       
     
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Game.name)
        </td>
          
        <td>
            @Html.DisplayFor(modelItem => item.Game.Company.name)
        </td>

        <td>
            @(item.Game.release_date.Year)
        </td>

        <td>
            @( item.date.ToShortDateString())
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.price)
        </td>
        
    </tr>
}

</table>
